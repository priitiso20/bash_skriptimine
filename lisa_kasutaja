#!/bin/bash

# kasutaja lisamise skript

if [ $# -ne 1 ]; then
    echo "Kasutusjuhend: sisesta "$0 soovitud_kasutajanimi""
else
  kasutajanimi=$1
  useradd $kasutajanimi -m -s /bin/bash
  if [ $? -eq 0 ]; then
    echo "Kasutaja nimega $kasutajanimi on lisatud sÃ¼steemi"
    cat /etc/passwd | grep $kasutajanimi
    ls -la /home/$kasutajanimi
  else
    echo "probleem kasutaja $kasutajanimi lisamisega"
    echo "probleemi kood on $?"
  fi
fi

